@using ApartmanYonetimOtomasyonu.Business.DTOs
@model ExpenseCreateDto

<form asp-controller="Expense" asp-action="AddAllFlatExpense" class="was-validated">
    <div class="mb-3">
        <label asp-for="BuildingId">Blok</label>
        <select asp-for="BuildingId" class="form-control" required
                asp-items="@(new SelectList(Model.Building, "Id", "BuildingName"))">
            <option>Lütfen birini seçiniz</option>
        </select>
        <span asp-validation-for="BuildingId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ExpenseTypeId">Gider Tipi</label>
        <select asp-for="ExpenseTypeId" class="form-control"
                asp-items="@(new SelectList(Model.ExpenseType, "Id", "ExpenseTypeName"))">
            <option>Lütfen birini seçiniz</option>
        </select>
        <span asp-validation-for="ExpenseTypeId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="IsPaid">Fiyat</label>
        <input type="text" class="form-control" asp-for="Price" />
        <span asp-validation-for="IsPaid" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Ekle</button>
</form>
