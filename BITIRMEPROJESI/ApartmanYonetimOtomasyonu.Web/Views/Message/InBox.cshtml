@using ApartmanYonetimOtomasyonu.Domain.Entities
@model List<Message>

<table id="datatable" style="width:100%" class="table table-hover table-striped">
    <thead>
        <tr>
            <th scope="col">Message</th>
            <th scope="col">Sender UserName</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var message in Model)
        {
            <tr>
                <td>@Html.Raw(message.MessageContent)</td>
                <td>@message.SenderEmail</td>
                <td>
                    <a asp-controller="Message" asp-action="Reply" asp-route-id="@message.Id" class="btn btn-primary">
                        Yanıtla
                    </a>
                </td>
                <td>
                    <a asp-controller="Message" asp-action="Delete" asp-route-id="@message.Id" class="btn btn-danger">
                        Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
